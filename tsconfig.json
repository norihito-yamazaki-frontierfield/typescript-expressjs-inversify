{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "outDir": "build",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": ["es2018", "dom"],
    "types": ["reflect-metadata"],
    "removeComments": true,
  },
  "include": [
    "src/**/*.ts",
  ]
}
